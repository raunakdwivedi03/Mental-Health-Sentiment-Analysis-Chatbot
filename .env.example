# ============================================
# OpenAI API Configuration
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
# 1. Sign up at OpenAI
# 2. Go to API Keys section
# 3. Create new secret key
# 4. Copy and paste below (DO NOT share this key)
OPENAI_API_KEY=sk-your_openai_api_key_here

# ============================================
# Application Settings
# ============================================
# Environment: development or production
ENVIRONMENT=development

# Debug mode: true or false
DEBUG=false

# ============================================
# Streamlit Configuration
# ============================================
# Streamlit theme: light or dark
STREAMLIT_THEME=light

# ============================================
# Model Settings
# ============================================
# LSTM Model confidence threshold (0.0 to 1.0)
EMOTION_CONFIDENCE_THRESHOLD=0.5

# Maximum conversation history to maintain
MAX_CONVERSATION_HISTORY=50

# ============================================
# API Configuration
# ============================================
# OpenAI API timeout in seconds
API_TIMEOUT=30

# Number of API retries on failure
MAX_RETRIES=3

# ============================================
# Logging
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
